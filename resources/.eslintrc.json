{
	"root": true,
	"extends": [
		"wikimedia/client",
		"wikimedia/jquery",
		"wikimedia/mediawiki"
	],
	"overrides": [
		{
			"files": [ "*.vue", "*.js" ],
			"rules": {
				"jsdoc/valid-types": "off"
			}
		},
		{
			"files": [ "*.vue" ],
			"rules": {
				"arrow-body-style": "off",
				"vue/multi-word-component-names": "off"
			}
		}
	]
}
