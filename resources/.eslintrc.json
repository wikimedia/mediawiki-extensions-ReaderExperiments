{
	"root": true,
	"extends": [
		"wikimedia/client",
		"wikimedia/jquery",
		"wikimedia/mediawiki"
	],
	"overrides": [
		{
			"files": [ "*.vue", "*.js" ],
			"rules": {
				"jsdoc/valid-types": "off"
			}
		},
		{
			"files": [ "*.vue" ],
			"rules": {
				"arrow-body-style": "off",
				"vue/multi-word-component-names": "off",
				"no-restricted-syntax": [
					"error",
					{
						"selector": "CallExpression > MemberExpression[object.name='RegExp'][property.name='escape']",
						"message": "RegExp.escape is from 2025, will fail on older browsers"
					}
				]
			}
		}
	],
	"ignorePatterns": [
		"lib/*",
		"!lib/foreign-resources.*"
	]
}
